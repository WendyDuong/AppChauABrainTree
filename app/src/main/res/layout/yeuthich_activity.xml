<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_yeu_thich_activity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_barsize"
        android:background="@drawable/gradient_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Yêu Thích"
        app:titleMarginStart="40dp"
        app:titleTextAppearance="@style/TextAppearance.AppCompat.Large"
        app:titleTextColor="#FFFFFF" />

    <com.google.android.material.tabs.TabLayout

        android:id="@+id/tab_layout_yeu_thich_activity"

        app:tabPaddingEnd="30dp"
        app:tabPaddingStart="10dp"
        app:tabIndicator="@null"
        android:layout_width="wrap_content"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="@id/toolbar_yeu_thich_activity"
        app:layout_constraintTop_toTopOf="parent"
        app:tabMode="fixed"/>

    <fragment
        android:id="@+id/frag_ment_yeu_thich"
        android:name="com.example.android.demoapp.fragment.YeuThichFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/action_barsize"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_yeu_thich_activity" />

</androidx.constraintlayout.widget.ConstraintLayout>